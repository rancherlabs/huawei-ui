<section class="modal-deploy-service container-fluid">
  <h1 class="text-center header">Add Service Function</h1>
  <hr>
  <div class="horizontal-form center-block">
    <div class="row form-group r-mt20">
      <div class="col-sm-12 col-md-2 form-label">
        <label>Name*</label>
      </div>
      <div class="col-sm-12 col-md-10">
        {{input class='form-control' placeholder='Service Function' value=name}}
      </div>
    </div>
    <div class="row form-group r-mt20">
      <div class="col-sm-12 col-md-2 form-label">
        <label>Description*</label>
      </div>
      <div class="col-sm-12 col-md-10">
        {{textarea class='form-control' rows='4' placeholder='A smal description of your service function' value=description}}
      </div>
    </div>
    <div class="row form-group r-mt20">
      <div class="col-sm-12 col-md-2 form-label">
        <label>Docker Image URL*</label>
      </div>
      <div class="col-sm-12 col-md-10">
        {{input class='form-control'  placeholder='ubuntu-precise-core-cloudimg-amd64-root.tar.gz' value=image}}
      </div>
    </div>
    <div class="row form-group r-mt20">
      <div class="col-sm-12 col-md-2 form-label">
        <label>Definition File</label>
      </div>
      <div class="col-sm-12 col-md-10">
        <div class="input-group">
          {{input class='form-control file-upload' readonly=true value=readableDefPath }}
          <span class="input-group-btn">
            <span class="btn btn-primary btn-file">
              Browse {{input class='form-control' type='file' value=definationFile id="defination-file"}}
            </span>
          </span>
        </div>
      </div>
    </div>
    <div class="row form-group r-mt20">
      <div class="col-sm-12 col-md-2 form-label">
        <label>Icon</label>
      </div>
      <div class="col-sm-12 col-md-10">
        <div class="input-group">
          {{input class='form-control file-upload' readonly=true value=readableImagePath}}
          <span class="input-group-btn">
            <span class="btn btn-primary btn-file">
              Browse {{input class='form-control' type='file' value=icon id="icon-file"}}
            </span>
          </span>
        </div>
      </div>
    </div>
  </div>
  {{partial 'add-cancel'}}
</section>
